{
    "name": "nodejs-express-svelte-socket-project",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev-backend\" \"npm run dev-svelte\"",
        "dev-backend": "NODE_ENV=development nodemon src/backend/server.js",
        "dev-svelte": "rollup -c -w",
        "build": "rollup -c",
        "start": "NODE_ENV=production node src/backend/server.js"
    },
    "nodemonConfig": {
        "ignore": ["public/*", "src/frontend/*"],
        "ext": "js,json"
    },
    "dependencies": {
        "connect-livereload": "^0.6.1",
        "express": "^4.17.1",
        "lucide-svelte": "^0.438.0",
        "qrcode": "^1.5.4",
        "rollup-plugin-postcss": "^4.0.2",
        "socket.io": "^4.4.1",
        "socket.io-client": "^4.4.1",
        "svelte": "^3.44.0",
        "uuid": "^10.0.0",
        "whatsapp-web.js": "^1.25.0"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^5.1.0",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "autoprefixer": "^10.4.0",
        "concurrently": "^7.6.0",
        "eslint": "^9.9.1",
        "eslint-plugin-svelte3": "^4.0.0",
        "postcss": "^8.4.5",
        "rollup": "^2.60.0",
        "rollup-plugin-ignore-import": "^1.3.2",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-svelte": "^7.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "svelte-preprocess": "^4.10.1",
        "tailwindcss": "^3.0.7"
    }
}